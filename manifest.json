{
  "name": "One Click History Cleaner",
  "short_name": "One Click History Cleaner",
  "default_locale": "en",
  "background": {
    "scripts": ["src/background.ts"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["storage", "browsingData", "notifications"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png" 
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png",
      "512": "icons/icon512.png" 
    }
  },
  "manifest_version": 3,
  "version": "0.0.17",
  "browser_specific_settings": {
    "gecko": {
      "id": "oneclickhistorycleaner@teufel-it.de",
      "strict_min_version": "109.0"
    }
  }
}
